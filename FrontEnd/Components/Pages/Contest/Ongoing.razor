@page "/ongoing"

@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication.Cookies

@using FrontEnd.ViewModel
@inject HttpClient httpClient

<h3>Folyamatban lévő tippversenyeim</h3>

<p>
    @foreach(var contest in ongoingContestsList) {
        @contest.Name
        <a href="/standings?contestId=@contest.Id" class="btn btn-success">Ranglista</a>
        <a href="/openedMatches?contestId=@contest.Id" class="btn btn-success">Nyitott meccsek</a>
        <br />
    }
</p>

@code {
    [CascadingParameter]
    public HttpContext httpContext { get; set; }


    List<ContestVM> ongoingContestsList = new();

    protected override async Task OnInitializedAsync() {
        string accessToken = httpContext.User.FindFirstValue("token");
        string userId = httpContext.User.FindFirstValue("id");

        httpClient.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", accessToken);
        httpClient.DefaultRequestHeaders.Add("Accept", "application/json");

        ongoingContestsList = await httpClient.GetFromJsonAsync<List<ContestVM>>($"api/contest/ongoingContest/{userId}");
    }
}
